<%= form_for @searches_result, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :account_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :account_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tweet, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tweet, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reply, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reply, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tweeted_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :tweeted_at, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sent, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :sent, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                searches_results_path, :class => 'btn' %>
  </div>
<% end %>
