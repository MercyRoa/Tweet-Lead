<%- model_class = @searches_result.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:account_id) %>:</strong></dt>
  <dd><%= @searches_result.account_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @searches_result.username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tweet) %>:</strong></dt>
  <dd><%= @searches_result.tweet %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reply) %>:</strong></dt>
  <dd><%= @searches_result.reply %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tweeted_at) %>:</strong></dt>
  <dd><%= @searches_result.tweeted_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sent) %>:</strong></dt>
  <dd><%= @searches_result.sent %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              searches_results_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_searches_result_path(@searches_result), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              searches_result_path(@searches_result),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
