<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>Description</th>
    <th>Group</th>
    <th>Token</th>
    <th>Token secret</th>
    <th>Mentions count</th>
    <th>New mentions count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.username %></td>
    <td><%= account.password %></td>
    <td><%= account.description %></td>
    <td><%= account.group %></td>
    <td><%= account.token %></td>
    <td><%= account.token_secret %></td>
    <td><%= account.mentions_count %></td>
    <td><%= account.new_mentions_count %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

