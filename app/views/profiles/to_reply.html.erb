<% @profiles.each_with_index do |p,i| %>

<!-- START: tweetBox -->
<div class="row tweetBox">
	<div class="span7">

		<div class="row">
			<div class="span1">
				<a class="" href="#">
					<%= image_tag p.profile_image_url, style: 'float:left; margin-right: 3px;', class: :avatar %>
					<strong class="fullname"><%= p.name %></strong>
					<br/>
					<span class="username"><s>@</s><b><%= p.screen_name %></b></span>
				</a>
				<div style="display: none" class="hiddenData">
				  <label class="label label-info" style="float: right; width: auto;">@<%= p.screen_name %></label> <br/>
				  <%= p.location %><br/>
				  (<%= p.followers_count %> followers)<br>
				  <small><%= p.description %> - <%= link_to p.url %></small>
				</div>
			</div>

			<div class="span6">
				<% p.tweets.each do |t| %>
				  <p class="<%= "right" if t.from_account %>"><%= t.text.gsub(/@(\w+)(?!\.)/, "<b>@\\1</b>").html_safe %></p>
				<% end %>

				<% p.sheduled_messages.each do |sm| %>
				  <p class="right" style="color: red"><%= sm.text.gsub(/@(\w+)(?!\.)/, "<b>@\\1</b>").html_safe %></p>
				<% end %>
			</div>  
		</div>

		
	</div>
	<div class="span5">
		<textarea name="" id="" cols="65" rows="2" class="replyBox" tabindex="<%= i+1 %>">@<%= p.screen_name %> </textarea>
		<p>
			<button class="btn btn-mini btn-info">desayuno</button>
			<button class="btn btn-mini btn-info">en peso?</button>
			<button class="btn btn-mini btn-info">asesoro-email</button>
			<button class="btn btn-mini btn-info">ense√±o</button>
			<button class="btn btn-mini btn-info">escribiste?</button>

			<!-- <span class="label"><a href="" class="">asesoro-email</a></span> -->

			<button class="btn btn-mini btn-danger" href="#">
				<i class="icon-remove icon-white"></i>
			</button>
		</p>
	</div>
</div>
<!-- END: tweetBox -->

<hr />
<% end %>

<script type="text/javascript">
	$('.avatar').popover({
		title: function(){
			return $(this).clone().wrap('<div>').parent().append( $(this).parent().find('strong').text() ).html();
		},
		content: function(){ 
			return $(this).parents('.span1').find('.hiddenData').html();
		},
		placement: 'right'
	});
</script>