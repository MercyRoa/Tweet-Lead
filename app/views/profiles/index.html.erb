<style>
  table img{
    float: left;
  }
</style>
<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Followers count</th>
    <th>Friends count</th>
    <th>Location</th>
    <th>Time zone</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td>
      <%= image_tag profile.profile_image_url %>
      @<%= profile.screen_name %><br/>
      <%= profile.name %><br/>
      <%= profile.location %><br/>
      <%= profile.url %><br/>
    </td>
    <td><%= profile.followers_count %></td>
    <td><%= profile.friends_count %></td>
    <td><%= profile.time_zone %></td>
    <td><%= profile.description %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Profile', new_profile_path %>
